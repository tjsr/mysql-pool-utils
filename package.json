{
  "name": "@tjsr/mysql-pool-utils",
  "version": "0.0.5",
  "description": "Connection handling and pooling utils for MySQL",
  "main": "dist/cjs/mysqlUtils.js",
  "module": "dist/esm/mysqlUtils.ts",
  "types": "dist/esm/mysqlUtils.d.ts",
  "type": "module",
  "scripts": {
    "build": "rimraf dist && tsc && tsc -p tsconfig.cjs.json",
    "check": "npx npm-check",
    "clean": "rimraf build dist coverage",
    "link": "npm link @tjsr/simple-env-utils",
    "lint": "eslint src/*.ts",
    "lint:fix": "eslint --fix src/*.ts",
    "prepack": "npm test && npm run build",
    "prepublishOnly": "npm run clean && npm test && npm run build",
    "test": "jest"
  },
  "nodemonConfig": {
    "watch": [
      "src/**/*.ts",
      "package.json"
    ],
    "extensions": "*.ts",
    "ignore": "dist",
    "exec": "tsc && tsc -p tsconfig.cjs.json",
    "delay": 200
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tjsr/mysql-pool-utils.git"
  },
  "keywords": [
    "env"
  ],
  "author": "Tim Rowe <tim@tjsr.id.au>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/tjsr/mysql-pool-utils/issues"
  },
  "homepage": "https://github.com/tjsr/mysql-pool-utils#readme",
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/mysql": "^2.15.26",
    "@types/node": "^20.12.7",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^9.1.0",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.2",
    "ts-jest-resolver": "^2.0.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5",
    "typescript-eslint": "^7.7.1"
  },
  "dependencies": {
    "@tjsr/simple-env-utils": "^0.0.10",
    "dotenv-flow": "^4.1.0",
    "mysql2": "^3.9.7"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "optionalDependencies": {
    "nodemon": "^3.1.0"
  }
}
